@model IEnumerable<Comarca_Fruver.ModelsDto.UsuarioDto>

@{
    ViewData["Title"] = "Cargamentos";
}

  <div class="float-right d-none d-sm-inline PrinCont">

    @if (TempData["mensaje"]!=null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="close"><span aria-hidden="true">&times</span></button>
        </div>
    }

      <div class="row">

          <div class="col-6">
      <h1>Reporte de Usuarios</h1>
          </div>
          <div class="col-6">
              <a class="btn sm-btn btn-success d-block" asp-controller="Usuario" asp-action="Creacion">Nuevo Usuario</a>       
      </div>
      </div>
      <br />

      <div id="CargamentoTable">

                  @if (Model.Count() > 0){
         <table id="TablaCargamento" class="table table-striped" style="width:100%">
                      <thead>
            <tr>
                <th>@Html.DisplayNameFor(m=>m.Documento)</th>
                <th>@Html.DisplayNameFor(m=>m.Nombre)</th>
                <th>@Html.DisplayNameFor(m=>m.Apellido)</th>
                <th>@Html.DisplayNameFor(m=>m.Celular)</th>
                <th>@Html.DisplayNameFor(m=>m.Rol)</th>
                <th>@Html.DisplayNameFor(m=>m.Clave)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
                    {
                        <tr>
                        <td>@item.Documento</td>
                        <td>@item.Nombre</td>
                        <td>@item.Apellido</td>
                        <td>@item.Celular</td>
                        <td>@item.Rol</td>
                        <td>@item.Clave</td>
                        <td>
                            <div class="btn-group col-4" role="group" aria-label="Basic mixed styles example">
                                <button type="button" class="btn btn-dark btcolor"><a  class="CRUDOP" asp-controller="Usuario" asp-action="Edicion" asp-route-id="@item.UsuarioID" >Editar</a></button>
                                <button type="button" class="btn btn-light"><a class="CRUDOP" asp-controller="Usuario" asp-action="Elimina" asp-route-id="@item.UsuarioID"> Eliminar</a></button>
                            </div>
                       </td>
                        </tr>
                    }
        </tbody>
         </table>   
        }
        else
        {
            <p>No hay registros previos</p>
        }

      </div>


      </div>